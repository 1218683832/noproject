<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DropDownMenu">
        <!-- 菜单部分 -->
        <attr name="menuHeight" format="reference|dimension"/>
        <attr name="menuTextSize" format="reference|dimension"/>
        <attr name="menuTextNormalColor" format="reference|color"/>
        <attr name="menuTextSelectedColor" format="reference|color"/>
        <!-- 菜单栏是否可以滑动(保证菜单过多也可以显示) -->
        <attr name="menuBarSile">
            <enum name="noscroll" value="0"></enum>
            <enum name="scroll" value="1"></enum>
        </attr>
    </declare-styleable>
</resources>
